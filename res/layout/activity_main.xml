<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:orientation="vertical" >
        
    <TextView
        android:id="@+id/no_connection"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@color/appback"
        android:gravity="center"
        android:text="@string/no_internet_connection"
        android:textSize="@dimen/font"
        android:visibility="gone" />
    
   <RelativeLayout
		android:id="@+id/RelativeLayout1"
       	android:layout_width="match_parent"
       	android:layout_height="wrap_content"
		android:background="@color/appback"
       	android:orientation="vertical" >
	                    
	        <TextView
	            android:id="@+id/accueil_string_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:padding="5dp"
	            android:text="@string/accueil_suggestions_string"
	            android:textSize="@dimen/font" />
	        
		
	        <LinearLayout
	            android:id="@+id/accueil_similar_show_list"
	            android:layout_width="match_parent"
	            android:layout_height="185dp"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/accueil_string_1"
	            android:layout_marginBottom="2dp"
	            android:baselineAligned="false"
	            android:orientation="horizontal"
	            android:padding="5dp" >
	
	            <TextView
	                android:id="@+id/accueil_empty"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="@string/accueil_empty_recommendations" 
			        android:layout_gravity="center"
	        		android:gravity="center"
	        		android:visibility="visible"/>
	
	            <LinearLayout
	                android:id="@+id/accueil_similar1"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_marginRight="5dp"
	                android:layout_weight="0.33"
		           	android:background="@drawable/background_accueil_reccomendations"
	                android:orientation="vertical"
	                android:padding="5dp" >
	
	                <TextView
	                    android:id="@+id/accueil_sim_title1"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="3dp"
	                    android:ellipsize="end"
	                    android:gravity="left"
	                    android:maxLines="1"
	                    android:text="@string/titre" />
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="20dp"
	                    android:layout_marginBottom="3dp"
	                    android:orientation="horizontal"
	                    tools:ignore="UseCompoundDrawables" >
	
	                    <ImageView
	                        android:id="@+id/accueil_sim_rating_type1"
	                        android:layout_width="20dp"
	                        android:layout_height="match_parent"
	                        android:contentDescription="@string/indisponible"
	                        android:gravity="left"
	                        android:paddingLeft="2dp"
	                        android:src="@drawable/like" />
	
	                    <TextView
	                        android:id="@+id/accueil_vote_1"
	                        android:layout_width="wrap_content"
	                        android:layout_height="match_parent"
	                        android:layout_gravity="center"
	                        android:gravity="center"
	                        android:paddingLeft="6dp"
	                        android:singleLine="true"
	                        android:text="@string/def_rate"
	                        android:textColor="@color/count"
	                        android:textStyle="bold" />
	
	                    <View
	                        android:layout_width="0dp"
	                        android:layout_height="0dp"
	                        android:layout_weight="1" />
	
	                    <ImageView
	                        android:id="@+id/accueil_sim_type_1"
	                        android:layout_width="20dp"
	                        android:layout_height="match_parent"
	                        android:contentDescription="@string/indisponible"
	                        android:paddingLeft="2dp"
	                        android:src="@drawable/movie" />
	                </LinearLayout>
	
	                <ImageView
	                    android:id="@+id/accueil_sim_poster1"
	                    android:layout_width="fill_parent"
	                    android:layout_height="match_parent"
	                    android:contentDescription="@string/indisponible"
	                    android:src="@drawable/default_media" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:id="@+id/accueil_similar2"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="0.33"
		           	android:background="@drawable/background_accueil_reccomendations"
	                android:orientation="vertical"
	                android:padding="5dp" >
	
	                <TextView
	                    android:id="@+id/accueil_sim_title2"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="3dp"
	                    android:ellipsize="end"
	                    android:gravity="left"
	                    android:maxLines="1"
	                    android:text="@string/titre" />
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="20dp"
	                    android:layout_marginBottom="3dp"
	                    android:orientation="horizontal"
	                    tools:ignore="UseCompoundDrawables" >
	
	                    <ImageView
	                        android:id="@+id/accueil_sim_rating_type2"
	                        android:layout_width="20dp"
	                        android:layout_height="match_parent"
	                        android:contentDescription="@string/indisponible"
	                        android:gravity="left"
	                        android:paddingLeft="2dp"
	                        android:src="@drawable/like" />
	
	                    <TextView
	                        android:id="@+id/accueil_vote_2"
	                        android:layout_width="wrap_content"
	                        android:layout_height="match_parent"
	                        android:layout_gravity="center"
	                        android:gravity="center"
	                        android:paddingLeft="6dp"
	                        android:singleLine="true"
	                        android:text="@string/def_rate"
	                        android:textColor="@color/count"
	                        android:textStyle="bold" />
	
	                    <View
	                        android:layout_width="0dp"
	                        android:layout_height="0dp"
	                        android:layout_weight="1" />
	
	                    <ImageView
	                        android:id="@+id/accueil_sim_type_2"
	                        android:layout_width="20dp"
	                        android:layout_height="match_parent"
	                        android:contentDescription="@string/indisponible"
	                        android:paddingLeft="2dp"
	                        android:src="@drawable/movie" />
	                </LinearLayout>
	
	                <ImageView
	                    android:id="@+id/accueil_sim_poster2"
	                    android:layout_width="fill_parent"
	                    android:layout_height="match_parent"
	                    android:contentDescription="@string/indisponible"
	                    android:src="@drawable/default_media" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:id="@+id/accueil_similar3"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_marginLeft="5dp"
	                android:layout_weight="0.33"
		           	android:background="@drawable/background_accueil_reccomendations"
	                android:orientation="vertical"
	                android:padding="5dp" >
	
	                <TextView
	                    android:id="@+id/accueil_sim_title3"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="3dp"
	                    android:ellipsize="end"
	                    android:gravity="left"
	                    android:maxLines="1"
	                    android:text="@string/titre" />
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="20dp"
	                    android:layout_marginBottom="3dp"
	                    android:orientation="horizontal"
	                    tools:ignore="UseCompoundDrawables" >
	
	                    <ImageView
	                        android:id="@+id/accueil_sim_rating_type3"
	                        android:layout_width="20dp"
	                        android:layout_height="match_parent"
	                        android:contentDescription="@string/indisponible"
	                        android:gravity="left"
	                        android:paddingLeft="2dp"
	                        android:src="@drawable/like" />
	
	                    <TextView
	                        android:id="@+id/accueil_vote_3"
	                        android:layout_width="wrap_content"
	                        android:layout_height="match_parent"
	                        android:layout_gravity="center"
	                        android:gravity="center"
	                        android:paddingLeft="6dp"
	                        android:singleLine="true"
	                        android:text="@string/def_rate"
